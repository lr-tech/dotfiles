#!/usr/bin/env bash

bg="$HOME/.config/bg"

path="$(readlink -f "$1")" &&
    case "$(file --mime-type -b "$path")" in
        image/* )
            ln -sf "$path" "$bg" && echo "Changing wallpaper... "
            ;;
        *)
            echo "Error: not a valid file"
            exit 1
            ;;
    esac

xwallpaper --zoom "$bg"
