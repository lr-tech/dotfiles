# vim:ft=sh
set shellopts   '-eu'
set ifs         "\n"
set icons
set scrolloff   8
set cleaner     '~/.config/lf/cleaner.sh'
set previewer   '~/.config/lf/scope.sh'

cmd extract !clear; for file in "$fx"; do aunpack -- "$file"; done
cmd mkdir   %mkdir "$@"
cmd on-quit $"$HOME/.config/lf/cleaner.sh"
cmd open    $~/.config/lf/rifle.sh
cmd setbg   &setbg "$f"

cmd delete ${{
    clear
    printf "$fx\n"
    confirm "Delete files permanently?" && rm -rf $fx
}}

cmd paste ${{
    clear
    files="$HOME/.local/share/lf/files"
    mode=$(head -n1 $files)
    list=$(tail -n+2 $files)

    if   [ "$1" = 'link' ];   then cp -vs --backup=numbered $list .
    elif [ $mode = 'copy' ];  then cp -vr --backup=numbered $list .
    elif [ $mode = 'move' ];  then mv -v  --backup=numbered $list . &&
        rm ~/.local/share/lf/files && lf -remote 'send clear'; fi
}}

cmd recol ${{
    width=$(tput cols)

    if [ $width -le 60 ]; then
        ~/.config/lf/cleaner.sh
        lf -remote "send $id set nopreview; set ratios 1"
    elif [ $width -le 80 ]; then
        lf -remote "send $id set ratios 1:1; set preview"
    else
        lf -remote "send $id set ratios 1:2:3; set preview"
    fi
}}

cmd yank ${{
    case $1 in
        dir)  dirname "$f" ;;
        name) basename "$f" ;;
        path) readlink -f "$f" ;;
    esac | tr -d '\n' | xclip -selection clipboard
}}

map c
map d
map p
map r
map u
map y

map A  rename
map a  push A<a-b><a-b><a-f>
map cc push A<c-u>
map cw push A<a-b><a-b><a-f><c-u>
map I  push A<c-a>

map cd push :cd<space>

map gd cd /dev
map ge cd /etc
map gh cd ~
map gm cd /media
map gM cd /mnt
map go cd /opt
map gp cd /tmp
map gr cd /
map gs cd /srv
map gu cd /usr
map gv cd /var

map dd cut
map dD delete

map pp paste normal
map pl paste link

map ud clear
map uv unselect
map uy clear
map uu :unselect; clear

map xe extract
map xn push :mkdir<space>
map xw setbg
map xx $$f
map xX !$f

map yy copy
map yp yank path
map yb yank dir
map yw yank name

map =  recol

map <esc> :unselect; clear

recol
